﻿<!DOCTYPE html>
<html lang="en" data-theme="azul">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PandaDawRazor</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PandaDawRazor.styles.css" asp-append-version="true"/>
</head>
<body>
<header>
    <div class="navbar bg-base-100 shadow-lg">
        <div class="flex-1">
            <a class="btn btn-ghost text-xl" asp-area="" asp-page="/Index">PandaDawRazor</a>
        </div>
        <div class="flex-none">
            <ul class="menu menu-horizontal px-1">
                <li><a asp-area="" asp-page="/Index">Home</a></li>
                <li><a asp-area="" asp-page="/Privacy">Privacy</a></li>
            </ul>
        </div>
    </div>
</header>
<div class="container mx-auto px-4">
    <main role="main" class="py-4">
        @RenderBody()
    </main>
</div>

<footer class="footer footer-center p-4 bg-base-200 text-base-content border-t">
    <div>
        <p>&copy; 2026 - PandaDawRazor - <a class="link link-primary" asp-area="" asp-page="/Privacy">Privacy</a></p>
    </div>
</footer>

<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>